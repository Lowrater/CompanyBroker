<UserControl x:Class="InteractWPF.View.Usercontrols.LogoutControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InteractWPF.View.Usercontrols"
             mc:Ignorable="d" 
             DataContext="{Binding Logout,Source={StaticResource Locator}}"
             d:DesignHeight="100" d:DesignWidth="200">
    <Grid>
        <!-- definitions -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <!-- content -->
        <TextBlock Grid.Column="0" TextAlignment="Center" VerticalAlignment="Center" Text="{Binding currentDateTime}"></TextBlock>
        <Button Grid.Column="1">Profile</Button>
        <Button Grid.Column="2" Command="{Binding LogoutCommand}">Logout</Button>
    </Grid>
</UserControl>
