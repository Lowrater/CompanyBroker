<UserControl x:Class="CompanyBroker.View.Usercontrols.TimeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CompanyBroker.View.Usercontrols"
             mc:Ignorable="d" 
             DataContext="{Binding Time,Source={StaticResource Locator}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Grid.Column="2" TextAlignment="Center" VerticalAlignment="Center" Text="{Binding currentDateTime}"></TextBlock>
    </Grid>
</UserControl>
