        </Grid.RowDefinitions>
        <!-- Text information - Row 0 -->
        <Label Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalContentAlignment="Center">Filter overview</Label>
        <!-- Company list choice - Row 1 -->
        <Grid Grid.Column="0" Grid.Row="1">
